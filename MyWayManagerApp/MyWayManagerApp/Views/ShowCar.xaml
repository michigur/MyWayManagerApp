<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MyWayManagerApp.Views.ShowCar"
              NavigationPage.HasNavigationBar="True">
    <ContentPage.Content>
        <StackLayout>
            <Label Text="{Binding CarID}" HorizontalTextAlignment="Center" FontSize="Large"/>
            <Label Text="{Binding FleetID}" HorizontalTextAlignment="Center" FontSize="Large"/>
            <Label Text="{Binding Location}" HorizontalTextAlignment="Center" FontSize="Large"/>
            <Label Text="{Binding NumSeats}" HorizontalTextAlignment="Center" FontSize="Large"/>
            <Label Text="{Binding CarTypeID}" HorizontalTextAlignment="Center" FontSize="Large"/>
            <Label Text="{Binding CarTank}" HorizontalTextAlignment="Center" FontSize="Large"/>
            

        </StackLayout>
    </ContentPage.Content>
</ContentPage>